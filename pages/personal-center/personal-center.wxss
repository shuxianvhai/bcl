/**index.wxss**/
page {
    background-color: #f2f2f2;
}
.personal-center-container {

}
.avatar-src {
   width: 100rpx;
   height: 100rpx;
}
.userinfo-container {
  height: 200rpx;
  padding: 50rpx 20rpx 50rpx 60rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  background-color: #ffffff;
}
.userinfo-avatar {
  float: left;
  width: 100rpx;
  margin-right: 20rpx;
}
.userinfo-nickname {
  display: block;
  font-weight:bold;
  font-size: 32rpx;
  height:32rpx;
  line-height:32rpx;
  color:rgba(51,51,51,1);
  margin: 10rpx 0 2rpx 0;
}
.userinfo-mobile {
  font-weight:500;
  color:rgba(102,102,102,1);
  line-height:28rpx;
  height: 28rpx;
  font-size: 28rpx;
}

.section-list {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.section-list:last-child {
  margin-bottom: 0;
}

.section-item-box {
    height: 96rpx;
    font-size: 30rpx;
    margin-left: 32rpx;
    background: #fff;  
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #f5f5f5;
    position: relative;
}

.section-title {
  width: 100%;
  height: 96rpx;
  line-height:96rpx;
  border-bottom: 1px solid #eee;
  margin-left: 25rpx;
}

.section-icon {
  width: 32rpx;
  height: 32rpx;
}

.arrow-section {
  position: relative;
}

.arrow-section::after {
    display: inline-block;
    content: " ";
    height: 18rpx;
    width: 18rpx;
    border-width: 1rpx 1rpx 0 0;
    border-color: rgb(204, 204, 204);
    border-style: solid;
    transform: rotate(45deg);
    position: absolute;
    top: 50%;
    right: 32rpx;
    margin-top: -9rpx;
}