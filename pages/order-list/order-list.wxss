/* pages/order-list/order-list.js.wxss */
page {
  background-color: #f2f2f2;
  font-size: 28rpx;
}

.filter-tab {
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
}

.filter-text {
   width: 25%;
   float: left;
   text-align: center;
   color:rgba(102,102,102,1);
   font-size: 28rpx;
   position: relative;
}

.filter-text.active:after {
   position: absolute;
   bottom: 0;
   left: 50%;
   width: 50%;
   margin-left: -25%;
   content: '';
   display: inline-block;
   height: 1px;
   background-color:rgba(75,146,234,1);
}

.active {
   color:rgba(75,146,234,1);
}

.order-list {
   margin: 28rpx 32rpx 28rpx;
}

.order-item {
  background-color: #fff;
  padding: 40rpx 40px 56rpx;
  margin-bottom: 12rpx;
}

.order-title {
  overflow: hidden;
  zoom: 1;
  margin-bottom: 36rpx;
}

.service-catg {
  float: left;
  font-weight:bold;
  color: #333;
}

.order-status {
  float: right;
  color: #999;
}

.unpay {
  color: #4B92EA;
}

.order-address {
  color: #666;
  line-height: 28rpx;
  margin-bottom: 20rpx;
}

.order-address:before {
  width: 12rpx;
  height: 12rpx;
  background-color: #3FBAA3;
  content: '';
  display: inline-block;
  border-radius: 12rpx;
  margin-right: 16rpx;
}

.order-time {
  color: #666;
  line-height: 28rpx;
}

.time-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: -7rpx;
  margin-right: 16rpx;
}






